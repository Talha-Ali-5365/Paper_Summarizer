{
  "manifest_version": 3,
  "name": "Paper Summarizer",
  "version": "0.1",
  "description": "Summarize research papers",

  "action": {
    "default_popup": "popup.html",
    "default_title": "Paper Summarizer",
    "type": "panel"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "webRequest",
    "tabs"
  ],
  "host_permissions": [
    "*://*.arxiv.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
